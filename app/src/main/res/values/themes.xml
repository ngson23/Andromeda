<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Andromeda" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SCREN">
        <item name="android:background">#CFCFCF</item>
    </style>
    <style name="TEXT">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TEXT_COMMENT">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SCREN_TEXT">
        <item name="android:background">#BEBEBE</item>
    </style>
    <style name="COLOR">
        <item name="android:tint">@color/black</item>
    </style>

</resources>